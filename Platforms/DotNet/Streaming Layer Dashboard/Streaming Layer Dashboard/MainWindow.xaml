<Window x:Class="ArcGis.Runtime.StreamingLayerDashboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013"
        Title="Streaming Layer Dashboard" Height="600" Width="800">
    <Grid>
        <esri:MapView>
            <!-- Map showing some basemap -->
            <esri:Map x:Name="FocusMap">
                <!-- Basemap from ArcGIS Online -->
                <esri:ArcGISTiledMapServiceLayer ID="World Map" 
                      ServiceUri="http://services.arcgisonline.com/ArcGIS/rest/services/NatGeo_World_Map/MapServer"/>
            </esri:Map>
        </esri:MapView>

        <!-- Add Streaming Service -->
        <StackPanel Width="100" HorizontalAlignment="Right" VerticalAlignment="Top" Background="White"
                    Orientation="Vertical">
            
            <!-- Connect button -->
            <Button Margin="3" Content="Connect" Click="Connect" />
            
        </StackPanel>
    </Grid>
</Window>
